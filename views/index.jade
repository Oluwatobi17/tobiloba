doctype html
html
	head
		title DacRecipe
		link(href='/stylesheets/style.css', rel='stylesheet')
	body

		nav.nav-top
			img.logo(src='/images/background.jpg', alt="Sorry can't load image")
			a.name(href='/recipes')
				span DacRecipe
		.container
			.display
				h2 Explore the world with DacRecipe
				img.display-img(src='/images/recipes.jpg', alt="Sorry can't load image")
			//.clear
			.form-display
				form(action='/login', method='post')
					input.login(type='text', name='username', placeholder='Username')
					input.login(type='password', name='password', placeholder='Password')
					input.loginSubmit(type='submit', value='Login')
				hr
				h1 Create an account
				form(action='/register', method='post')
					input.login2(type='text', name='fullname', placeholder='First name and Last name')
					input.login2(type='text', name='username', placeholder='Username')
					input.login(type='email', name='email', placeholder='Email')
					select.login
						option Female
						option Male
					input.login(type='password', name='password', placeholder='Password')
					input.login(type='password', name='password2', placeholder='Confirm Password')
					input.loginSubmit(type='submit', value='Create an account')
